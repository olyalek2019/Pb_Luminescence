<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CaptionStyle" parent="@style/AppTheme">
        <item name="android:background">@drawable/text_caption</item>
        <item name="android:textAlignment">center</item>
        <item name="android:radius">5dp</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="registerStyle">
        <item name="android:textColor">@color/backCaptionColor</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CaptionMainPage">
        <item name="android:textColor">@color/backgroundColorDialog</item>
        <item name="fontFamily">@font/playfair_display_black</item>
        <item name="android:text">@string/mainPageCaption</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/backgroundColorDialog</item>
        <item name="fontFamily">@font/gentium_book_basic_bold</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="userPageText">
        <item name="fontFamily">@font/taviraj_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/backCaptionColor</item>
    </style>

    <style name="navText">
        <item name="fontFamily">@font/taviraj_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="contactsStyleCaptions">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/frank_ruhl_libre_bold</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/book_names</item>
        <item name="android:textColor">@color/backCaptionColor</item>
    </style>


    <style name="contactsStyleNums">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/backCaptionColor</item>
        <item name="fontFamily">@font/frank_ruhl_libre</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    
    
    <style name="AnnotationStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="money">
        <item name="android:fontFamily">@font/frank_ruhl_libre_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/money_line</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LayoutVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="lineVertical">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/playfair_display_bold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/playfair_display_bold</item
        ></style>

    <style name="linealWithVertLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@drawable/vertical_line</item>
    </style>



</resources>