<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDrawerBack"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            style="@style/CaptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/pb_caption"
            android:textColor="@color/ButtonsBackCaptionL"
            android:textSize="50sp" />

        <TextView
            style="@style/CaptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pb"
            android:textColor="@color/ButtonsBackCaptionL"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="356dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/userIcon"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/idGreetings"
            style="@style/userPageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/helloUser"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/idUserName"
            style="@style/userPageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/idWelcomeSpeech"
            style="@style/userPageText"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/welcomeSpeech"
            android:textSize="20sp" />

        <Button
            android:id="@+id/idStartButton"
            android:layout_width="149dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/start_button"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/startButton"
            android:textColor="@color/ButtonsBackCaptionL"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>