<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    apps:cardElevation="10dp"
    apps:cardBackgroundColor="@color/backgroundColorDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/idEmail"
            style="@style/registerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/idPassword"
            style="@style/registerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordHint"
            android:inputType="textPassword" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/idRepPassword"
            style="@style/registerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordRepHint"
            android:inputType="textPassword" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/idNickName"
            style="@style/registerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/NickNameHint"
            android:inputType="text" />

    </LinearLayout>
</androidx.cardview.widget.CardView>