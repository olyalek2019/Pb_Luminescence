<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/idCallCenter"
            style="@style/contactsStyleCaptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CallCenter" />

        <TextView
            android:id="@+id/idCallCenterPhoneVoda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CallCenterPhoneVoda"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idCallCenterPhoneKyiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CallCenterPhoneKyiv"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idCallCenterPhoneLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CallCenterPhoneLife"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idCallCenterPhoneLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/contactsStyleNums"
            android:text="@string/CallCenterPhoneLand"
            />
        <View
            style="@style/line"/>
        <TextView
            android:id="@+id/idWorkHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workHours"
            style="@style/contactsStyleCaptions"/>

        <TextView
            android:id="@+id/idMonday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idTueday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tuesday"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idWednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wednesday"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idThursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/contactsStyleNums"
            android:text="@string/thursday"
            />
        <TextView
            android:id="@+id/idFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/friday"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idSaturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saturday"
            style="@style/contactsStyleNums"
            />

        <TextView
            android:id="@+id/idSunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/contactsStyleNums"
            android:text="@string/sunday"
            />
        <View
            style="@style/line"/>
        <TextView
            android:id="@+id/idSocialNet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/socialNet"
            style="@style/contactsStyleCaptions"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="12dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:src="@drawable/ic_instagram" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:text="@string/Instagram"
                style="@style/contactsStyleNums"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="12dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:src="@drawable/ic_facebook" />

            <TextView
                android:id="@+id/textView7"
                style="@style/contactsStyleNums"
                android:layout_width="116dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"

                android:text="@string/Facebook" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/idSignInTextContacts"
            style="@style/CaptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="@drawable/text_caption"
            android:fontFamily="@font/playfair_display"
            android:gravity="bottom"
            android:text="@string/luminis2020"
            android:textColor="@color/colorPrimary2"
            android:textSize="17sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>